[Unit]
Description=Hitch TLS unwrapping daemon
After=network.target
Documentation=https://github.com/varnish/hitch/tree/master/docs man:hitch(8)
ConditionFileNotEmpty=/etc/hitch/hitch.conf

[Service]
ExecStart=/usr/sbin/hitch --user _hitch --group _hitch --config /etc/hitch/hitch.conf --syslog
ExecReload=/bin/kill -HUP $MAINPID
Type=simple
Restart=on-failure
PrivateDevices=true
PrivateTmp=true
ProtectHome=true
ProtectSystem=full
# Allow more than 1024 open files/sockets at once.
LimitNOFILE=131072

[Install]
WantedBy=multi-user.target
